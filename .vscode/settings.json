// Platzieren Sie Ihre Einstellungen in dieser Datei, um Standard- und Benutzereinstellungen zu überschreiben.
{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "files.autoSave": "afterDelay",
  // Fügt Codeausschnitte ein, wenn ihr Präfix übereinstimmt. Funktioniert am besten, wenn "quickSuggestions" nicht aktiviert sind.
  "editor.tabCompletion": true,
  // Nachfolgendes automatisch eingefügtes Leerzeichen entfernen
    "editor.trimAutoWhitespace": false,
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/app/**/*.js": true,
    "**/*.map": true
  }
}
